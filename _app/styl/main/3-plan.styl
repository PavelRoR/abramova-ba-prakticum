#plan
	padding 90px 0
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 414px)
		padding 40px 0
.day
	&s
		margin-bottom: 70px
		@media screen and (max-width 991px)
			margin-bottom: 40px
	border-radius: 20px
	margin-bottom: 15px
	border: 3px solid #4F5F76
	padding 25px 25px 25px 60px
	display table
	min-height 335px
	width 100%
	@media screen and (max-width 1199px)
		padding 25px
	@media screen and (max-width 991px)
		display block
		min-height 1px
		padding 0 0 35px 50px
		margin-bottom: 0
		border-radius: 0
		border: none
		position relative
		&:last-of-type
			padding-bottom: 0 !important
		&:before
			content: ''
			display block
			position absolute
			top 0
			left 9px
			width 3px
			background-color: #A41134
			height: 100%
		&:after
			content: ''
			display block
			position absolute
			top: 5px
			left 5px
			width 11px
			height: 11px
			border-radius: 50%
			background-color: #A41134
			box-shadow: 0 0 0 10px #fff
	@media screen and (max-width 414px)
		padding 0 0 30px 30px
	&-title
		display table-cell
		width 385px
		padding-right: 15px
		margin-right: 15px
		position relative
		height: 100%
		vertical-align middle
		@media screen and (max-width 1199px)
			width 35%
		@media screen and (max-width 991px)
			display block
			width 100%
			padding 0
			margin 0 0 10px
		&:before
			content: ''
			display block
			position absolute
			top: 0
			right 0
			height: 100%
			width: 3px
			background-color: #A41134
			@media screen and (max-width 991px)
				content: none
		h4
			color #A41134
			font-size: 28px
			font-weight: bold
			line-height: 1.2
			text-align right
			@media screen and (max-width 991px)
				text-align left
			@media screen and (max-width 414px)
				font-size: 16px
			small
				display block
				font-weight: normal
				margin-bottom: 20px
				@media screen and (max-width 991px)
					margin-bottom: 0
				@media screen and (max-width 414px)
					font-size: 16px
	&-info
		vertical-align middle
		display table-cell
		@media screen and (max-width 991px)
			display block
		
.cert
	padding 190px 0 90px
	@media screen and (max-width 991px)
		padding 90px 0 20px
	@media screen and (max-width 414px)
		padding 60px 0 20px
	&-text
		width 100%
		max-width 784px
		margin 0 auto 30px
		text-align center
		padding 60px 36px 0
		border-top: 3px solid #A41134
		font-size: 24px
		line-height: 1.3
		@media screen and (max-width 991px)
			padding 40px 0 0
			font-size: 24px
			text-transform none
		@media screen and (max-width 414px)
			font-size: 16px
		span
			font-weight: bold
			display block
		small
			display block
			text-transform none
			font-size: 24px
			margin-top: 40px
			@media screen and (max-width 991px)
				font-size: 20px
				margin 30px 0
			@media screen and (max-width 414px)
				font-size: 16px
	&-img
		display block
		width 100%
		max-width 550px
		margin 0 auto