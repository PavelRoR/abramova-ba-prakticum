#plan
	padding 90px 0
.day
	&s
		margin-bottom: 70px
	border-radius: 20px
	margin-bottom: 15px
	border: 3px solid #4F5F76
	padding 25px 25px 25px 60px
	// display flex
	// flex-direction: row
	// align-items: center
	// justify-content: flex-start
	display table
	min-height 335px
	width 100%
	&-title
		display table-cell
		width 385px
		padding-right: 15px
		margin-right: 15px
		position relative
		height: 100%
		vertical-align middle
		&:before
			content: ''
			display block
			position absolute
			top: 0
			right 0
			height: 100%
			width: 3px
			background-color: #A41134
		h4
			color #A41134
			font-size: 28px
			font-weight: bold
			line-height: 1.2
			text-align right
			small
				display block
				font-weight: normal
				margin-bottom: 20px
	&-info
		vertical-align middle
		display table-cell
.cert
	padding 190px 0 90px
	&-text
		width 100%
		max-width 784px
		margin 0 auto 30px
		text-align center
		padding 60px 36px 0
		border-top: 3px solid #A41134
		font-size: 24px
		line-height: 1.3
		@media screen and (max-width 991px)
			padding 20px 0 0
			font-size: 24px
			text-transform none
		// @media screen and (max-width 386px)
		// 	font-size: 22px
		span
			font-weight: bold
			display block
		small
			display block
			text-transform none
			font-size: 24px
			margin-top: 40px
			@media screen and (max-width 991px)
				font-size: 20px
				margin 30px 0
	&-img
		display block
		width 100%
		max-width 550px
		margin 0 auto