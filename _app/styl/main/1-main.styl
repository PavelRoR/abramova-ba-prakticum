.main-wrapper
	background: url(../img/backs/main.svg) no-repeat top center
	background-size: 100% 1450px
.main
	&-container
		position relative
	&-content
		position relative
		z-index 20
		// display flex
		// flex-direction: row
		// align-items: flex-start
		// justify-content: space-between
	&-img
		position absolute
		top 30px
		right 100px
		z-index 0
	&-info
		position relative
	&-title
		font-family: G
		font-size: 80px
		color #A41134
		margin-bottom: 20px
		line-height: 1
		text-transform uppercase
		small
			font-family: N
			font-weight: normal
			font-size: 28px
			display block
			text-align center
			color #2C3E54
	&-pre
		font-size: 28px
		color #4F5F76
		padding 5px 43px
		border-radius: 24px
		border: 2px solid #4F5F76
		display inline-block
		text-transform uppercase
		line-height: 1.2
		margin-bottom: 15px
	&-subtitle
		line-height: 1
		font-size: 24px
		font-weight: bold
		color #4F5F76
		width 100%
		max-width 442px
	&-cert
		margin 70px 0
		width 100%
		max-width 590px
		display flex
		flex-direction: row
		align-items: center
		justify-content: flex-start
		&-img
			margin-right: 20px
		&-text
			font-size: 24px
			font-weight: bold
			color #4F5F76
			line-height: 1
	&-date
		margin-top: 65px
		display flex
		flex-direction: row
		align-items: center
		justify-content: space-between
		width 100%
		max-width 500px
		&-text
			font-size: 24px
			font-weight: bold
			line-height: 36px
			color #4F5F76
			&:nth-of-type(2)
				padding 0 35px
				// margin 0 35px
				// position relative
				border-right: 3px solid #A41134
				border-left: 3px solid #A41134