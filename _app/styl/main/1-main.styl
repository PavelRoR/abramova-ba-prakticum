.main-wrapper
	position relative
	&-img
		position absolute
		top 0
		left 0
		right 0
		margin 0 auto
		display block
		z-index -1
		@media screen and (min-width 1920px)
			width 100%
.main
	&-container
		position relative
	&-content
		position relative
		z-index 20
	&-img
		position absolute
		top 30px
		right 70px
		z-index 0
		@media screen and (max-width 1199px)
			right 0
			width 100%
			max-width 400px
		&-mob
			@media screen and (max-width 991px)
				margin -13% auto 0
				position relative
				z-index -1
				width 445px
			@media screen and (max-width 414px)
				margin-top: -166px
			@media screen and (max-width 360px)
				display none !important
			&-2
				display none
				@media screen and (max-width 360px)
					display block !important
					width 360px
					margin-top: -100px
	&-info
		position relative
	&-title
		font-family: G
		font-size: 80px
		color #A41134
		margin-bottom: 20px
		line-height: 1
		text-transform uppercase
		@media screen and (max-width 1199px)
			font-size: 70px
		@media screen and (max-width 991px)
			font-size: 50px
			text-align center
		@media screen and (max-width 560px)
			font-size: 40px
		@media screen and (max-width 414px)
			font-size: 24px
		@media screen and (max-width 350px)
			font-size: 20px
		small
			font-family: N
			font-weight: normal
			font-size: 28px
			display block
			text-align center
			color #2C3E54
			@media screen and (max-width 560px)
				font-size: 24px
			@media screen and (max-width 414px)
				font-size: 18px
			@media screen and (max-width 350px)
				font-size: 16px
	&-pre
		font-size: 28px
		color #4F5F76
		padding 5px 43px
		border-radius: 24px
		border: 2px solid #4F5F76
		display inline-block
		text-transform uppercase
		line-height: 1.2
		margin-bottom: 15px
		text-align center
		@media screen and (max-width 991px)
			position absolute
			bottom: 15px
			color #fff
			background-color: #4F5F76
			border: none
			margin 0 auto
			left 0
			right 0
			width 100%
			max-width 420px
		@media screen and (max-width 560px)
			font-size: 24px
		@media screen and (max-width 414px)
			font-size: 18px
			padding 5px 20px
	&-subtitle
		line-height: 1
		font-size: 24px
		font-weight: bold
		color #4F5F76
		width 100%
		max-width 442px
		@media screen and (max-width 991px)
			text-align center
			margin 0 auto
		@media screen and (max-width 414px)
			max-width 190px
			font-size: 16px
			margin-left 0
			text-align: left
	&-cert
		margin 70px 0
		width 100%
		max-width 590px
		display flex
		flex-direction: row
		align-items: center
		justify-content: flex-start
		@media screen and (max-width 1199px)
			margin 45px 0
		@media screen and (max-width 991px)
			margin 15px auto 10px
			max-width 520px
		@media screen and (max-width 414px)
			max-width 320px
		&-img
			margin-right: 20px
			@media screen and (max-width 414px)
				width 36px
				height: 36px
				margin-right: 10px
		&-text
			font-size: 24px
			font-weight: bold
			color #4F5F76
			line-height: 1
			@media screen and (max-width 414px)
				font-size: 16px
	&-date
		margin-top: 65px
		display flex
		flex-direction: row
		align-items: center
		justify-content: space-between
		width 100%
		max-width 500px
		@media screen and (max-width 991px)
			text-align center
			margin: 15px auto 0
		@media screen and (max-width 560px)
			max-width 350px
		&-text
			font-size: 24px
			font-weight: bold
			line-height: 36px
			color #4F5F76
			@media screen and (max-width 560px)
				font-size: 16px
			&:nth-of-type(2)
				padding 0 35px
				// margin 0 35px
				// position relative
				border-right: 3px solid #A41134
				border-left: 3px solid #A41134
				@media screen and (max-width 560px)
					padding 0 20px
				@media screen and (max-width 360px)
					padding 0 15px
.button-wrapper-main
	@media screen and (max-width 991px)
		text-align center