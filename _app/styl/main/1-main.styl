.main-wrapper
	position relative
	&-img
		position absolute
		top 0
		left 0
		right 0
		margin 0 auto
		display block
		z-index -1
		@media screen and (min-width 1920px)
			width 100%
.main
	&-container
		position relative
	&-content
		position relative
		z-index 20
	&-img
		position absolute
		top 30px
		right 70px
		z-index 0
		@media screen and (max-width 1199px)
			right 0
			width 100%
			max-width 400px
	&-info
		position relative
	&-title
		font-family: G
		font-size: 80px
		color #A41134
		margin-bottom: 20px
		line-height: 1
		text-transform uppercase
		@media screen and (max-width 1199px)
			font-size: 70px
		small
			font-family: N
			font-weight: normal
			font-size: 28px
			display block
			text-align center
			color #2C3E54
	&-pre
		font-size: 28px
		color #4F5F76
		padding 5px 43px
		border-radius: 24px
		border: 2px solid #4F5F76
		display inline-block
		text-transform uppercase
		line-height: 1.2
		margin-bottom: 15px
	&-subtitle
		line-height: 1
		font-size: 24px
		font-weight: bold
		color #4F5F76
		width 100%
		max-width 442px
	&-cert
		margin 70px 0
		width 100%
		max-width 590px
		display flex
		flex-direction: row
		align-items: center
		justify-content: flex-start
		@media screen and (max-width 1199px)
			margin 45px 0
		&-img
			margin-right: 20px
		&-text
			font-size: 24px
			font-weight: bold
			color #4F5F76
			line-height: 1
	&-date
		margin-top: 65px
		display flex
		flex-direction: row
		align-items: center
		justify-content: space-between
		width 100%
		max-width 500px
		&-text
			font-size: 24px
			font-weight: bold
			line-height: 36px
			color #4F5F76
			&:nth-of-type(2)
				padding 0 35px
				// margin 0 35px
				// position relative
				border-right: 3px solid #A41134
				border-left: 3px solid #A41134