#author
	padding 120px 0
.author-pre
	text-align center
	font-size: 28px
	font-weight: bold
	line-height: 1.1
	text-transform uppercase
	margin 0 auto
	width 100%
	max-width 1015px
	&-img
		display block
		margin 35px auto 120px
.general-title-author
	position relative
	margin-bottom: -40px
	z-index 30
	@media screen and (max-width 991px)
		margin-bottom: 20px
		padding-bottom: 28px
		text-align: center
		h3
			text-align center
			// display block
		// span
		// 	left 0
		// 	text-align: left
	span
		@media screen and (max-width 991px)
			text-align: left
			left: -30px
			top 5px
		@media screen and (max-width 610px)
			left -10px
	&:after
		content: ''
		display block
		position absolute
		left 0
		right 0
		bottom: -20px
		margin 0 auto
		width 100%
		max-width 780px
		height: 3px
		background-color: #A41134
		@media screen and (max-width 991px)
			bottom: 0
.author
	&-img
		display block
		width 100%
		max-width 466px
		position relative
	&-info-best
		margin: 59px 0 40px
		h4
			margin-bottom: 30px
			font-size: 28px
			font-weight: bold
			line-height: 1.2
			color #fff
			padding 30px 20px
			background-color: #2C3E54
			display inline-block
			text-align center
.general-subtitle-author
	margin: 100px 0 59px