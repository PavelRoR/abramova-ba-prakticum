mixin b(bwcl,cl,href,p, n)
	.button-wrapper(class=bwcl)
		if n
			a.button(class=cl href=href onclick="awoOpenFormModal("+n+")")!=p
		else
			a.button(class=cl href=href)!=p
mixin img(cl,src,alt)
	img(class=cl src!=src alt=alt)
mixin gt(cl,h3)
	.general-title(class=cl)
		h3!=h3
mixin gts(cl,h3)
	.general-title-simple(class=cl)!=h3
mixin gtl(cl,h3,sp)
	.general-title.general-title-left(class=cl)
		h3
			if sp
				span!=sp
			!=h3
mixin gtr(cl,h3,sp)
	.general-title.general-title-right(class=cl)
		h3!=h3
			if sp
				span!=sp
mixin gtc(cl,h3,sp)
	.general-title.general-title-center(class=cl)
		h3
			if sp
				span!=sp
			=h3

